<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to equipment_index_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/jmadridvaquero/image/upload/v1558535217/man-in-canoe_ya8ifp.png", class: "avatar" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%if user_signed_in? %>
          <a class="nav-link" href="#">Welcome, <%= current_user.username %>!</a>
        <% else %>
          <a class="nav-link" href="#">Welcome to rentOutdoors!</a>
        <% end %>
      </li>
      <li class="nav-item dropdown">
        <%if user_signed_in? %>
          <%= cl_image_tag current_user.avatar_photo, width: 40, height: 40, crop: :fill, radius: "max", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
              <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
            <%= link_to profile_path, class: "dropdown-item" do %>
              <i class=“fa fa-sign-out”></i>See your profile
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete, class: 'dropdown-item' do %>
              <i class=“fa fa-sign-out”></i>Log out
            <% end %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>




