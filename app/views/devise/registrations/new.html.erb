<div class="full-height">

  <div class="form-card">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :username, required: true,
                    autofocus: true,
                    placeholder: 'your username here',
                    input_html: { autocomplete: "your username" },
                    label: false, placeholder: 'Username' %>

        <%= f.input :email,
                    required: true,
                    placeholder: 'user@domain.com',
                    input_html: { autocomplete: "your email" },
                    label: false, placeholder: 'Email' %>

        <%= f.input :password,
                    required: true,
                    placeholder: 'at least 8 characters',
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" },
                    label: false, placeholder: 'Password' %>

        <%= f.input :password_confirmation,
                    required: true,
                    placeholder: 'has to match your password',
                    input_html: { autocomplete: "new-password" },
                    label: false, placeholder: 'Confirm your passoword' %>
        <%= f.input :avatar_photo %>
        <%= f.input :avatar_photo_cache, as: :hidden %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn btn-outline-success btn-block" %>
      </div>
    <% end %>
    <br>

    <%= render "devise/shared/links" %>
  </div>

</div>
