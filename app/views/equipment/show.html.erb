<h1><%= @equipment.name %></h1>
<p><%= @equipment.description %></p>
<%= link_to "All Equipment", equipment_index_path %>
<% if policy(@equipment).edit? %>
<%= link_to "Edit", edit_equipment_path %>
<% end %>
<% if policy(@equipment).destroy? %>
<%= link_to "Destroy", equipment_path, method: "delete", data: { confirm: "Do you want to delete?"} %>
<% end %>


<div class="container">
  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-marker="<%= @marker.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>
