
<div id="homepage-banner" class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1515569045695-3b8a5db84e22?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2878&q=80);">
  <div>
    <h1 class="row justify-content-center">Welcome to RentOutdoors</h1>
    <h2 class="row justify-content-center typed">
     <span id="banner-typed-text"></span>
    </h2>
  </div>
  <div class="row justify-content-center" id="search-box">

    <%= form_tag(equipment_index_path, method: :get) do %>
        <%= text_field_tag :query, params[:query], :placeholder => "Find equipment", class: "form-control" %>
        <%# submit_tag 'Search', name: nil, class:"btn btn-primary" %>
    <% end %>
  </div>
</div>


<div class="container">
	<div class="sports-cards">

  <%= link_to equipment_index_path(sport: "River", anchor: "sport-cards-index") do %>
		<div class="card-sport" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1439066290691-510066268af5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1566&q=80)">
		  By the River...
	  </div>
  <% end %>

  <%= link_to equipment_index_path(sport: "Mountain", anchor: "sport-cards-index") do %>
		<div class="card-sport" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1519904981063-b0cf448d479e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80)">
		  By the Mountain...
    </div>
  <% end %>

  <%= link_to equipment_index_path(sport: "Beach", anchor: "sport-cards-index") do %>
		<div class="card-sport" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1495954484750-af469f2f9be5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80)">
		  By the Beach...
    </div>
  <% end %>

	</div>
</div>

<div class="container">
  <h2>Equipment</h2>
  <%= render partial: "shared/index-cards", object: @equipment%>
</div>

<% if params[:query].present? %>
  <script>
    window.scrollTo(0, window.innerHeight + 400);
  </script>
<% end %>
