<div class="container">
  <h1>Create a new equipment</h1>
  <%= simple_form_for @equipment do |f| %>
    <%= f.input :name %>
    <%= f.select :sport, Equipment::SPORTS %>
    <%= f.input :price %>
    <%= f.input :address %>
    <%= f.fields_for :equipment_attachments do |p| %>
      <div class="field">
        <%= p.label :photo %><br>
        <%= p.file_field :photo, :multiple => true, name: "equipment_attachments[photo][]" %>
      </div>
    <% end %>
    <%= f.input :description %>
    <%= f.submit "Create", class: "btn btn-primary"%>
  <% end %>
  <br>
  <%= link_to "Equipment List", equipment_index_path, class: "btn btn-primary" %>
</div>
